#include<stdio.h>
#include<conio.h>

main()
{
	int number;
	clrscr();
	printf("Enter any Number : ");
	scanf("%d",&number);

	/* pre inc and dec */
	printf("\nPre Increment && Decrement :\n");
	printf("Increment :%d\n",++number);
	printf("Decrement :%d\n",--number);

	/* post inc and dec */
	printf("Post Increment && Decrement :\n");
	printf("I :%d\n",number++);
	printf("Increment :%d\n",number);
	printf("D :%d\n",number--);
	printf("Decrement :%d\n",number);

	getch();


}