#include<stdio.h>
#include<conio.h>

main()
{       char c;
	clrscr();

	printf("S.  Sunday\n");
	printf("M.  Monday\n");
	printf("T.  Tuesday\n");
	printf("W.  Wednesday\n");
	printf("TH. Thursday\n");
	printf("F.  Friday\n");
	printf("SA. Saturday\n\n");

	printf("Enter Your Choice :");
	scanf("%c",&c);

	switch(c)
	{
		case 'S':
			printf("Today is SUNDAY.....");
			break;

		case 'M':
			printf("Today is MONDAY.....");
			break;

		case 'T':
			printf("Today is TUESDAY.....");
			break;

		case 'W':
			printf("Today is WEDNESDAY.....");
			break;

		case 'TH':
			printf("Today is THURSDAY.....");
			break;

		case 'F':
			printf("Today is FRIDAY.....");
			break;

		case 'SA':
			printf("Today is SATURDAY.....");
			break;

		default :
			printf("This Day is Not Existing !!!!!");

	}

	getch();
}